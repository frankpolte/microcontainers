#!/bin/sh
#
# SSH wrapper for dropbear with support for environment variables
#
# (c) 2016 Martin Haso≈à <martin.hason@gmail.com>

set -e

_PARAMS=""
_ENVS=""
while [ x"$1" != x ]; do
    case "$1" in
    -p|-l|-o|-i|-L|-R|-W|-K|-I|-B|-J|-c|-m)
        _PARAMS="${_PARAMS} ${1} ${2}"
        shift
        ;;
    -e)
        if test "${2#*=}" != "$2"; then
            _ENVS="${_ENVS}export $2;"
        else
            _ENVS="${_ENVS}export $2=\"$(eval echo \${"$2"})\";"
        fi
        shift
        ;;
    *)
        if [ "${1:0:1}" != "-" ] && [ x"$_ENVS" != x ]; then
            _PARAMS="${_PARAMS} ${_ENVS}"
            unset -v _ENVS
        fi

        _PARAMS="${_PARAMS} ${1}"
        ;;
    esac
    shift
done

unset -v _ENVS _POSITION

/sbin/tini -s -- dropbearmulti ssh $_PARAMS
