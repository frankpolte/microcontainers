#!/bin/sh
#
# sshd wrapper for dropbear
#
# https://unix.stackexchange.com/questions/308421/how-to-store-load-exported-environment-variables-to-from-a-file
#
# (c) 2017, 2018 Martin Haso≈à <martin.hason@gmail.com>

set -e

export -p | grep -vE " (PWD|OLDPWD|SHLVL|USER|SHELL)=" > /tmp/.ssh_env
dropbear -R -F -B -E -a -c /usr/local/bin/ssh_wrapper
